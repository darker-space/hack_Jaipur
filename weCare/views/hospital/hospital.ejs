<%- include("../partials/header1.ejs") %>
    <title>We Care !</title>
    <link rel="stylesheet" href="/stylesheets/hospital.css">
    <link href="https://fonts.googleapis.com/css2?family=Metal+Mania&display=swap" rel="stylesheet">

    <%- include("../partials/header2.ejs")%>

        <div class="row p-2 text-light " id="top-row">
            <div class="col-4"><i class="ml-5 fab fa-studiovinari" id="icon-up"></i></div>
            <div class="col-8 display-4 mt-2 mb-0 "> <span class="page-head"> We care ! </span>
            </div>
        </div>
        <hr class="py-1 my-2">
        <div class="container " id="">

            <div class=" container-fluid wow  animate__animated  animate__fadeIn ">



                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://images.unsplash.com/photo-1588623358844-fd118c056dfc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Know information about all hospitals at one place!</h5>
                                <p>you can know Which hospital is treating corona... how many beds are empty..pernight price.how many doctors are avialbale...much more</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://images.unsplash.com/photo-1516549655169-df83a0774514?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Every hospital can post what equipments or goods it need</h5>
                                <p>Seller can View every post and contact them...</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Seller can post what they need to sell !</h5>
                                <p>Hospital owner can view ...all post and contact them...</p>
                            </div>
                        </div>




                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>




            </div>

            <div class="row mt-5 ">

                <% hospitalArr.forEach(function(hospital){ %>
                    <div class="col-xl-4 col-lg-6">
                        <div class="card animate__animated animate__bounceInUp shadow-lg wow fadeInUp  m-0 m-md-1 p-0 p-md-3 " id="<%=hospital._id %> ">
                            <div class="m-1 p-2 shadow-sm d-flex justify-content-between align-items-center" id="header">
                                <div><i class="fas fa-hospital-alt" id="dp2"></i> Hospital</div>

                            </div>
                            <img class="card-img-top" src="/<%= hospital.img_url[0] %> ">
                            <div class="text-center">
                                <h6 class=" justify-content-center">
                                    <%= hospital.name %>
                                </h6>
                            </div>
                            <button class=" my-2 container-fluid border bg-light border-5 ">
                                <h6><span class="text-dark "><i class="fas fa-map-marked"></i> Address </span> &emsp; <span class=" text-danger"><%=hospital.address%></span>
                                </h6>
                            </button>
                            <div class="container p-0 shadow-lg">
                                <ul class="list-group side-info">

                                    <button class="btn bg-light  list-group-item "> Information </button>
                                    <b>
                                    <li class="list-group-item justify-content-between border-warning">
                                        <span class="pull-left text-dark "> <i class="fas fa-lungs-virus"></i> Does treat Corona ? </span> &emsp; <span class="pull-right text-danger"><%=hospital.isCorona%></span>
                                    </li>
                                    
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "><i class="fas fa-procedures"></i> Available Beds </span> &emsp; <span class="pull-right text-danger"><%=hospital.availBed%></span>
                                    </li>
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "><i class="fas fa-rupee-sign"></i> Cost per night </span> &emsp; <span class="pull-right text-danger"><i class="fas fa-rupee-sign"></i> <%=hospital.cost%></span>
                                    </li>
                                    
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "> <i class="fas fa-user-md"></i> Total available Doctors </span> &emsp; <span class="pull-right text-danger"><%=hospital.availDoc%></span>
                                    </li>
                                    
                                </b>
                                </ul>
                            </div>

                            <div class="container  m-2 pl-0">
                                <a href="/hospital/<%= hospital._id%>/show" class="btn btn-info text-light container-fluid">More info </a>
                            </div>
                        </div>
                    </div>
                    <% }) %>


            </div>

            <%- include("../partials/footer1.ejs") %>
                <script type="text/javascript" src="/jsPage/hospital.js"></script>
                <%- include("../partials/footer2.ejs") %>