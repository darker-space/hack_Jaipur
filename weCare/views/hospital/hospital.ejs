            <div class="row mt-5 ">
                <div>
                    <% hospitalArr.forEach(function(hospital){ %>
                        <div class="col-xl-4 col-lg-6">
                            <div class="card animate__animated animate__bounceInUp shadow-lg wow fadeInUp  m-0 m-md-1 p-0 p-md-3 " id="<%=hospital._id %> ">
                                <div class="m-1 p-2 shadow-sm d-flex justify-content-between align-items-center" id="header">
                                    <div><i id="dp2" class="fas fa-hiking"></i></div>
                                    <div>
                                        Owner:
                                        <%= hospital.authorName %><br> Created at:
                                            <%= hospital.createdAt.toDateString() %>
                                    </div>
                                </div>
                                <img class="card-img-top wow animate__animated animate__bounceInUp" src="<%=hospital.picture%>">
                                <div class="card-header ">
                                    <span class="d-flex justify-content-center"><%= hospital.name %></span>
                                </div>

                                <div class="card-footer shadow-md">
                                    <div class="row justify-content-between text-light">
                                        <span class="col-5 btn btn-light pl-0">
                                    <form  action="/hospital/<%=hospital._id%>/like" method="POST">
                                    <button class="container-fluid"><i class="far fa-heart" id="like"></i><br>
                                   
                                    <%= hospital.likesNo %> Likes
                                    </button>
                                </form> 
                                </span>
                                        <span class=" col-6 btn btn-light pl-0 " id="show-comments "> 
                                    <a href="/hospital/<%= hospital._id%>/show">
                                        <div class="container-fluid" >
                                   
                                    <i class="fas fa-comments" id="comment"></i><br>
                                   <%= hospital.commentNo %> Comments
                                </div>
                                    </a>
                                    </span>
                                    </div>
                                </div>
                                <div class="container  m-2 pl-0">
                                    <a href="/hospital/<%= hospital._id%>/show" class="btn btn-info text-light container-fluid">More info </a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>

            </div>

