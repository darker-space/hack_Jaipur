<%- include("../partials/header1.ejs") %>
    <link rel="stylesheet" href="/stylesheets/hospital.css">
    <link href="https://fonts.googleapis.com/css2?family=Metal+Mania&display=swap" rel="stylesheet">

    <%- include("../partials/header2.ejs")%>

        <div class="row p-2 text-light " id="top-row">
            <div class="col-4"><i class="ml-5 fab fa-studiovinari" id="icon-up"></i></div>
            <div class="col-8 display-4 mt-2 mb-0 "> <span class=""> Choose for which of your hospital you want to demand supplies </span>
            </div>
        </div>
        <hr class="py-1 my-2">
        <div class="container " id="">

            <div class="row mt-5 ">

                <% hospitalArr.forEach(function(hospital){ %>
                    <% if(currUser&&currUser._id.equals(hospital.author._id)){%>
                        <div class="col-xl-4 col-lg-6">
                            <div class="card animate__animated animate__bounceInUp shadow-lg wow fadeInUp  m-0 m-md-1 p-0 p-md-3 " id="<%=hospital._id %> ">
                                <div class="m-1 p-2 shadow-sm d-flex justify-content-between align-items-center" id="header">
                                    <div><i class="fas fa-hospital-alt" id="dp2"></i> Hospital</div>

                                </div>
                                <img class="card-img-top" src="<%=hospital.picture%>">
                                <div class="text-center">
                                    <h6><span class=" justify-content-center"><%= hospital.name %></span></h6>
                                </div>
                                <button class=" my-2 container-fluid border bg-light border-5 ">
                                    <h6><span class="text-dark "><i class="fas fa-map-marked"></i> Address </span> &emsp; <span class=" text-danger"><%=hospital.address%></span>
                                    </h6>
                                </button>
                                <div class="container p-0 shadow-lg">
                                    <ul class="list-group side-info">

                                        <button class="btn bg-light  list-group-item "> Information </button>
                                        <b>
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "> <i class="fas fa-lungs-virus"></i> Does treat Corona ? </span> &emsp; <span class="pull-right text-danger"><%=hospital.isCorona%></span>
                                    </li>
                                    
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "><i class="fas fa-procedures"></i> Available Beds </span> &emsp; <span class="pull-right text-danger"><%=hospital.availBed%></span>
                                    </li>
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "><i class="fas fa-rupee-sign"></i> Cost per night </span> &emsp; <span class="pull-right text-danger"><i class="fas fa-rupee-sign"></i> <%=hospital.cost%></span>
                                    </li>
                                    
                                    <li class="list-group-item justify-content-between">
                                        <span class="pull-left text-dark "> <i class="fas fa-user-md"></i> Total available Doctors </span> &emsp; <span class="pull-right text-danger"><%=hospital.availDoc%></span>
                                    </li>
                                    
                                </b>
                                    </ul>
                                </div>

                                <div class="container  m-2 pl-0">
                                    <a href="/hospital/<%=hospital._id%>/demand" class="btn btn-info text-light container-fluid">Choose This ! </a>
                                </div>
                            </div>
                        </div>
                        <% }}) %>


            </div>

            <%- include("../partials/footer1.ejs") %>
                <script type="text/javascript" src="/jsPage/hospital.js"></script>
                <%- include("../partials/footer2.ejs") %>